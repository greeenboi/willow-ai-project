# Environment variables for AI Voice Agent Backend
# Copy this file to .env and fill in your values

# Groq AI API Key (required)
GROQ_API_KEY=your_groq_api_key_here

# Cal.com Configuration (required for calendar booking)
CALCOM_API_KEY=your_calcom_api_key_here
CALCOM_EVENT_TYPE_ID=your_calcom_event_type_id_here

# Turso Database Configuration (required)
TURSO_DATABASE_URL=libsql://your-database-url.turso.io
TURSO_AUTH_TOKEN=your_turso_auth_token_here

# Frontend Configuration (for CORS)
# Set this to your Vercel deployment domain
VERCEL_DOMAIN=your-app-name
# Or use this for development
ALLOW_ALL_ORIGINS=true

# Optional: Custom production domain
PRODUCTION_DOMAIN=your-custom-domain.com

# Port (Docker will use this)
PORT=8000